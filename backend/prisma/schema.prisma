generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id @default(uuid())
  email             String    @unique
  password          String
  name              String?
  telegramBotToken  String?
  telegramChatId    String?
  discordBotToken   String?
  discordChannelId  String?
  gmailTo           String?
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt
  resetToken        String?
  resetTokenExpires DateTime?
  notes             Notes[]
  tasks             Task[]
}

model Task {
  id                   String    @id @default(uuid())
  title                String
  tags                 String[]
  due_date             DateTime?
  completed            Boolean   @default(false)
  created_at           DateTime  @default(now())
  updated_at           DateTime  @updatedAt
  channel              String[]
  reminder_before      Int?
  reminder_every       Int?
  repeat_interval      Int?
  type                 Type      @default(NORMAL)
  userId               String
  start_date           DateTime?
  lastNotificationType String?
  lastNotifiedAt       DateTime?
  user                 User      @relation(fields: [userId], references: [id])
}

model Notes {
  id         String   @id @default(uuid())
  title      String?
  content    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  userId     String
  user       User     @relation(fields: [userId], references: [id])
}

enum Type {
  EVENT
  HABIT
  NORMAL
}
