# Database
# DATABASE_URL="postgresql://username:password@localhost:5432/productivity_db"

# Server
# PORT=3001
# NODE_ENV=development

# JWT Secret
# JWT_SECRET=your_jwt_secret_here

# Gmail Configuration (for password reset emails)
# Create an App Password for your Gmail account
# GMAIL_USER=your_email@gmail.com
# GMAIL_APP_PASSWORD=your_app_password_here

# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Get your chat ID by messaging @userinfobot or @myidbot
# TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Discord Bot Configuration
# Create a bot at https://discord.com/developers/applications
# DISCORD_BOT_TOKEN=your_discord_bot_token_here
# Right-click on your Discord channel and copy ID (enable Developer Mode first)
# DISCORD_CHANNEL_ID=your_discord_channel_id_here

# Optional: User-specific settings (for future features)
# DEFAULT_TIMEZONE=UTC
# MAX_NOTIFICATIONS_PER_HOUR=10
